<header>
  <h1>映画登録<管理者画面></h1>
</header>

<%= form_with(model: @movie, url: admin_movies_path, method: :post) do |f| %>
  <div>
    <%= f.label :name, "映画タイトル" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :year, "公開年" %>
    <%= f.number_field :year %>
  </div>

  <div>
    <%= f.label :is_showing, "上映中か" %>
    <%= f.check_box :is_showing %>
  </div>

  <div>
    <%= f.label :description, "概要" %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :image_url, "画像URL" %>
    <%= f.text_field :image_url %>
  </div>

  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>