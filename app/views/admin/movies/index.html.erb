<header>
  <h1>映画一覧<管理者画面></h1>
</header>

<% if flash[:notice] %>
  <p style="color: green;"><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<table border="1">
  <tr>
    <th>ID</th>
    <th>映画タイトル</th>
    <th>公開年</th>
    <th>上映中か</th>
    <th>概要</th>
    <th>画像URL</th>
    <th>作成日時</th>
    <th>更新日時</th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td><a href="/admin/movies/<%= movie.id %>"><%= movie.id %></a></td>
      <td><%= movie.name %></td>
      <td><%= movie.year %></td>
      <td><% if movie.is_showing==true then %>
      上映中
      <% else %>
      上映予定
      <% end %>
      </td>
      <td><%= movie.description %></td>
      <td><a href=<%= movie.image_url %>>画像</a></td>
      <td><%= movie.created_at %></td>
      <td><%= movie.updated_at %></td>
    </tr>
  <% end %>
</table>