<header>
  <h1>予約追加<管理者画面></h1>
</header>

<% if flash[:notice] %>
  <p style="color: green;"><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with(model: @reservation, url: admin_reservations_path, method: :post) do |f| %>

  <div>
  <%= f.label :schedule_id, "スケジュールID" %>
  <%= f.number_field :schedule_id, required: true %>
  </div>

  <div>
  <%= f.label :sheet_id, "座席ID" %>
  <%= f.number_field :sheet_id, required: true %>
  </div>

  <div>
  <%= f.label :date, "日付" %>
  <%= f.date_field :date, required: true %>
  </div>

  <div>
  <%= f.label :name, "予約者氏名" %>
  <%= f.text_field :name, required: true %>
  </div>

  <div>
  <%= f.label :email, "予約者メールアドレス" %>
  <%= f.email_field :email, required: true %>
  </div>

  <%= f.submit "予約する" %>
<% end %>