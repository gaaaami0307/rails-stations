<header>
  <h1>座席一覧</h1>
</header>

<% if flash[:notice] %>
  <p style="color: green;"><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>

<table>

  <tr class="sheetbox">
  <% @sheets.each do |sheet| %>
    <% if sheet.row == 'a' %>
      <% flg = true %>
      <% @screens.each do |screen| %>
        <% if @reservations.find_by(schedule_id: @schedule.id, sheet_id: sheet.id, date: params[:date], screen_id: screen.id) == nil %>
          <td class="sheet">
            <a href="<%=new_movie_schedule_reservation_path(@movie, @schedule, sheet_id: sheet.id, date: params[:date], screen_id: screen.id)%>"><%= sheet.row %>-<%= sheet.column %></a>
            </td>
          <% flg = false %>
          <% break %>
        <% end %>
      <% end %>
      <% if flg %>
        <td class="reservedsheet">
          <p><%= sheet.row %>-<%= sheet.column %></p>
        </td>
      <% end %>
    <% end %>
  <% end %>
  </tr>
  
